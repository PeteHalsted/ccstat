{
  "name": "ccstat-standalone",
  "version": "1.0.0",
  "description": "Standalone Claude Code usage status monitor",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ccstat-standalone": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "dependencies": {
    "es-toolkit": "^1.39.10",
    "path-type": "^5.0.0",
    "tinyglobby": "^0.2.9",
    "xdg-basedir": "^5.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}

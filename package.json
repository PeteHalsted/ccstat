{
  "name": "ccstat-acp",
  "version": "1.0.0",
  "description": "Claude Code usage status monitor",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ccstat-acp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "prepublishOnly": "npm run clean && npm run build && npm run check"
  },
  "dependencies": {
    "es-toolkit": "^1.39.10",
    "path-type": "^5.0.0",
    "tinyglobby": "^0.2.9",
    "xdg-basedir": "^5.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeteHalsted/ccstat.git"
  },
  "homepage": "https://github.com/PeteHalsted/ccstat#readme",
  "bugs": {
    "url": "https://github.com/PeteHalsted/ccstat/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "usage",
    "monitor",
    "cli",
    "tokens",
    "status",
    "anthropic"
  ],
  "author": "Your Name <your.email@example.com>",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
